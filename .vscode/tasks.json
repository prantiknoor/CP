{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++ Build and Run",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/runcode.ps1",
      "args": [
        "-CodePath",
        "${file}",
        "-ExePath",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-InputPath",
        "${workspaceFolder}/inputf.txt",
        "-OutputPath",
        "${workspaceFolder}/outputf.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}